@model IEnumerable<WakilRecouvrement.Web.Models.ViewModel.HomeViewModel>

@{
    ViewBag.Title = "Al-Wakil Recouvrement";
}

<h2>Connecté en tant que @Session["username"]</h2>

<br />

<!-- Default box -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Avancement par lot</h3>
    </div>
    
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>

                    <th style="width: 20%">
                        Lots
                    </th>
                    <th style="width: 30%">
                        Agents
                    </th>
                    <th>
                        Avancement
                    </th>

                </tr>
            </thead>
            <tbody>



                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        <a>
                           Lot @Html.DisplayFor(modelItem => item.numLot)
                        </a>
                        <br />
                        <small>
                            @Html.DisplayFor(modelItem => item.nbTraite) / @Html.DisplayFor(modelItem => item.nbAffTotal) (Affectations)
                        </small>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.agents)
                    </td>

                    <td class="project_progress">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: @Html.DisplayFor(modelItem => item.avancement)%">
                            </div>
                        </div>
                        <small>
                            @Html.DisplayFor(modelItem => item.avancement) % Terminé
                        </small>
                    </td>


                </tr>
                }
                    
                </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
