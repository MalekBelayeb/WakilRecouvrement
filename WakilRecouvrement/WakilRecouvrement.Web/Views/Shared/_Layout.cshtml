<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">


    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    <title>Al-Wakil Recouvrement</title>
</head>
@{ 

    if(Session["username"]!=null)
    {
        ViewBag.bodyClass = "hold-transition sidebar-mini";
    }
    else
    {
        ViewBag.bodyClass = "hold-transition sidebar-collapse";
    }

    var role = Session["role"];
    var username = Session["username"];
}


<body class="@ViewBag.bodyClass">
    <div class="wrapper">

        @if (Session["username"] != null)
        {
            <div class="notification-icon" style="margin-top:10px">
                <span class="glyphicon glyphicon-envelope " style="font-size:25px"></span>
                <span class="badge" id="ntCnt"></span>
            </div>

            <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">

        @using (Html.BeginForm("SuiviClient", "TousClientsAffecte", FormMethod.Post, new { onsubmit = "showLayoutSearchLoading()" }))
        {
        <div class="row">

                <div class="col">


                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Compte, IDClient, Nom..." })


                </div>
                <div class=" col-3">

                    <input id="LayoutSearchsubmitBtn" type="submit" class="btn btn-primary" value="Chercher" />

                    <button style="display:none" id="LayoutSearchsubmitLoading" class="btn btn-primary" type="button" disabled>
                        <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                        <span class="sr-only">Loading...</span>
                    </button>

                </div>


            </div>
            }




</nav>


        }

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            -
            <!-- Brand Logo -->
            <a href='@Url.Action("Index", "Home")' class="brand-link">
                <img src="~/adminlte/img/WakilLogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">AL Wakil Recouv. </span>
            </a>


            <div class="sidebar">

                @if (Session["username"] != null)
                {
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                        <div class="info">

                            <a href="#" class="d-block">@Session["username"]</a>

                        </div>
                    </div>

                }

                <nav class="mt-2">
                    <ul id="myUL" class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        @if (Session["role"] != null)
                        {
                            if (Session["role"].Equals("admin"))
                            {

                                <ul id="myUL">
                                    <li>

                                        <span class="box">

                                            <a class="nav-link">
                                                <p>
                                                    Lots
                                                </p>
                                            </a>

                                        </span>

                                        <ul class="nested">


                                            <li class="nav-item">
                                                <a href="@Url.Action("ImportLot", "Lot")" class="nav-link">
                                                    <p>Importer</p>
                                                </a>
                                            </li>

                                            <li class="nav-item">
                                                <a href="@Url.Action("ConsulterClients", "Lot")" class="nav-link">
                                                    <p>Consulter</p>
                                                </a>
                                            </li>

                                            <li class="nav-item">
                                                <a href="@Url.Action("ChoisirLot", "Affectation")" class="nav-link">
                                                    <p>Affecter</p>
                                                </a>
                                            </li>

                                            <li class="nav-item">
                                                <a href="@Url.Action("ChoisirAgent", "Affectation")" class="nav-link">
                                                    <p>Reaffecter</p>
                                                </a>
                                            </li>

                                        </ul>
                                    </li>
                                </ul>


                                <ul id="myUL">
                                    <li>

                                        <span class="box">

                                            <a class="nav-link ">
                                                <p>
                                                    Traitements
                                                </p>
                                            </a>
                                        </span>

                                        <ul class="nested">

                                            <li class="nav-item">

                                                <a href="@Url.Action("Valider","ValiderTraitement")" class="nav-link">

                                                    <p>Valider </p>

                                                </a>

                                            </li>

                                            <li class="nav-item">
                                                <a href="@Url.Action("SuiviTraitement", "SuiviMesTraitement")" class="nav-link">
                                                    <p>Suivi</p>
                                                </a>
                                            </li>


                                            <li class="nav-item">

                                                <a href="@Url.Action("HistoriqueTraitements","HistoriqueDesTraitements")" class="nav-link">

                                                    <p>Historique</p>

                                                </a>

                                            </li>


                                        </ul>
                                    </li>
                                </ul>


                                <ul id="myUL">
                                    <li>

                                        <span class="box">

                                            <a class="nav-link ">
                                                <p>
                                                    Banque
                                                </p>
                                            </a>

                                        </span>

                                        <ul class="nested">

                                            <li class="nav-item">

                                                <a href="@Url.Action("GenererResultat","ContactBanque")" class="nav-link">

                                                    <p>Contact</p>

                                                </a>

                                            </li>

                                        </ul>
                                    </li>
                                </ul>

                            }
                        }


                        @if (Session["role"] != null)
                        {

                            if (Session["role"].Equals("agent"))
                            {

                                <li class="nav-item">

                                    <a href="@Url.Action("MesAffectation", "MesAffectationList", new { traite = "SAUF",numLot="0",sortOrder="0" })" class="nav-link">

                                        <p>Traiter les affectations</p>

                                    </a>

                                </li>


                                <li class="nav-item">

                                    <a href="@Url.Action("SuiviTraitement", "SuiviMesTraitement", new { traite = "SAUF",numLot="0",sortOrder="0" })" class="nav-link">

                                        <p>Mes traitements</p>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="@Url.Action("SuiviRDV","MesRDV",new {RDVType="RDV_J", numLot="0",sortOrder="0" })" class="nav-link">

                                        <p>Mes RDV (<span id="nbSuivi">0</span>) </p>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="@Url.Action("MesRappels","MesRappelsList",new {RappelDate=DateTime.Now.Date +"", numLot="0",sortOrder="0" })" class="nav-link">

                                        <p>Mes Rappels (<span id="rappelNB">0</span>) </p>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="@Url.Action("TraitementRejetesList","MesTraitementsRejetes",new {RappelDate=DateTime.Now.Date +"", numLot="0",sortOrder="0" })" class="nav-link">

                                        <p>Traitements rejetés (<span id="rejetesNB">0</span>) </p>

                                    </a>

                                </li>

                            }

                            <li class="nav-item">

                                <a href="@Url.Action("SuiviClient","TousClientsAffecte",new {traite="SAUF" })" class="nav-link">

                                    <p>Suivi des affectations</p>

                                </a>

                            </li>

                            if (Session["role"].Equals("admin"))
                            {

                                <li class="nav-item">

                                    <a href="@Url.Action("Index","Statistique")" class="nav-link" style=" pointer-events: none; cursor: default;">
                                        <p>Stats et Rentabilité</p>
                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="@Url.Action("genererFacture","Facture")" class="nav-link">
                                        <p>Facture</p>
                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="@Url.Action("Renseigner","Facture")" class="nav-link" style=" pointer-events: none; cursor: default;">
                                        <p>Renseigner</p>
                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="@Url.Action("AccountList","Home")" class="nav-link">
                                        <p>Gestion des comptes</p>
                                    </a>

                                </li>


                            }

                            <li class="nav-item">

                                <a href="@Url.Action("ChangePassword","Authentification")" class="nav-link">
                                    <p>Parametre du compte</p>
                                </a>

                            </li>

                            <li class="nav-item">

                                <a href="@Url.Action("Deconnect","Authentification")" class="nav-link">
                                    <p>Se deconnecter</p>
                                </a>

                            </li>

                        }

                    </ul>

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@ViewBag.Title</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                @if (@ViewContext.RouteData.Values["controller"].ToString() != "Home" ||
                                    @ViewContext.RouteData.Values["action"].ToString() != "Index")
                                {
                                    <li class="breadcrumb-item">
                                        @Html.ActionLink("Home Page", "Index", "Home")
                                    </li>
                                }
                                <li class="breadcrumb-item active">@ViewBag.Title</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()

                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <!-- Default to the left -->
            <strong>Al-Wakil Recouvrement.</strong>
        </footer>
    </div>

    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/adminlte/js")
    @RenderSection("scripts", required: false)

    <link href="~/adminlte/css/treeViewJs.css" rel="stylesheet" type="text/css" />

    <!--
        <link rel="stylesheet" type="text/css" href="~/Content/toastr.min.css">
        <script type="text/javascript" src="~/Scripts/notify.js"></script>
        <script type="text/javascript" src="~/Scripts/toastr.min.js"></script>
        <script src="~/Scripts/jquery.signalR-2.4.1.min.js" type="text/javascript"></script>
    -->

    <script type="text/javascript" src="~/adminlte/js/treeViewJs.js"></script>

    <script type="text/javascript">

        function showLayoutSearchLoading() {

            document.getElementById("LayoutSearchsubmitLoading").style.display = "block";
            document.getElementById("LayoutSearchsubmitBtn").style.display = "none";

        }


    $(document).ready(function () {

            if (@Html.Raw(Json.Encode(@role))== "agent") {

            $.ajax({
                type: 'POST',
                url: '@Url.Action("SuiviRDVNB", "NBMenuAgent")',
                dataType: 'json',
                data: {  },
                success: function (data) {

                    document.getElementById("nbSuivi").innerHTML = data["nb"]
                    document.getElementById("rappelNB").innerHTML = data["rappelNB"]
                    document.getElementById("rejetesNB").innerHTML = data["rejetes"]
                }

            })

        }
        })






    </script>















</body>




</html>
