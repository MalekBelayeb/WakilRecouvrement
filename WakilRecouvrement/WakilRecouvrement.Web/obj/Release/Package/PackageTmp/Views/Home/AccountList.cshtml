@model IEnumerable<WakilRecouvrement.Domain.Entities.Employe>

@{
    ViewBag.Title = "Gestion des comptes";
}

<form id="list" action="@Url.Action("AccountList", "Home")" , method="post">
    
    <div class="form-group">
        @Html.Label("type", "Type de compte: ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("type", new SelectListItem[]
       {
               new SelectListItem() { Text = "Tous les comptes", Value = "0" },
               new SelectListItem() { Text = "Comptes verifés", Value = "1" },
               new SelectListItem() { Text = "Comptes non verifés", Value = "2" }},

            new
            {
                @class = "form-control", onchange = "document.getElementById('list').submit();"
            })
        </div>
    </div>

</form>




    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVerified)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>

                <td>


                    @Html.DropDownListFor(modelItem => item.RoleId, ViewBag.RoleList as SelectList, htmlAttributes: new { @class = "form-control", disabled = "disabled" })

                </td>
                <td>
                
                    @Html.DisplayFor(modelItem => item.IsVerified)
                
                </td>
                <td>
                    @Html.ActionLink("Modifier", "UpdateAccount", new { id = item.EmployeId })
                </td>
            </tr>
        }

    </table>
